<?xml version="1.0"?>
<schema version="0.3">
	<table name="btTopicList">
		<field name="bID" type="I">
			<key />
			<unsigned />
		</field>
        <field name="mode" type="C" size="1">
            <notnull />
            <default value="S" />
            <!-- S = Search, P = Page //-->
        </field>
        <field name="topicAttributeKeyHandle" type="C" size="255">
            <notnull />
            <default value="" />
        </field>
		<field name="topicTreeID" type="I" size="10">
            <unsigned />
            <notnull />
            <default value="0" />
		</field>
        <field name="cParentID" type="I">
            <unsigned />
            <notnull />
            <default value="0" />
        </field>
        <field name="title" type="C" size="255">
            <notnull />
            <default value="" />
        </field>
	</table>
</schema>
